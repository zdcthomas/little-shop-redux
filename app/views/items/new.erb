<form class='new-item' action='/items' method='post'>
  <h1>New Item</h1>
  <p>Title: <input type='text' name='item[title]' placeholder='title'></p>
  <p>Description: <input type='text' name='item[description]' placeholder='description'></p>
  <p>Price: <input type ='text' name='item[price]' placeholder='price'></p>
  <p>Image: <input type='text' name='item[img]' placeholder='image'></p>
  <p><input type='submit' value='Submit'></p>

  <p>Merchant:
    <select name='merchants'>
      <% @items.each do |item| %>
      <option value='merchant'>
        <%= item.merchant_id %>
      </option>
      <% end %>
    </select>
  </p>
</form>
