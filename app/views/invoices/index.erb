<h1>Invoices</h1>
<head>
<link rel="stylesheet" href="invoice_index.css">
</head>
<body>
<% @invoices.each do |invoice|%>
  <ul name="invoices">
    <li><h1> Invoice: <%= invoice.id %> </h1></li>
    <li><%= invoice.customer_id %></li>
    <li><%= invoice.merchant_id %></li>
    <li><%= invoice.status %></li>
    <li><%= invoice.created_at %></li>
    <li><%= invoice.updated_at %></li>
    <a href="/invoices/<%= invoice.id  %>/edit">Edit</a>
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" id="delete_invoice_<%= invoice.id %>" value="delete ">
  </ul>
<% end %>
</body>
